FROM node:22
RUN corepack enable && corepack prepare pnpm@10.20.0 --activate
WORKDIR /workspace

# Copy workspace configuration files
COPY pnpm-workspace.yaml pnpm-lock.yaml .npmrc package.json ./

# Copy package.json files for all workspace packages
COPY packages/recipes/package.json ./packages/recipes/
COPY packages/movies/package.json ./packages/movies/

# Install all dependencies at workspace root
RUN pnpm install --frozen-lockfile

# Copy the rest of the recipes app
COPY packages/recipes ./packages/recipes

WORKDIR /workspace/packages/recipes
EXPOSE 3000
CMD ["pnpm", "run", "dev"]
